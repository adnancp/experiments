<UserControl x:Class="Mapper.Transformation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:uc="clr-namespace:Mapper"
             mc:Ignorable="d"
             Loaded="transformation_Loaded">
    
    <Canvas Name="canvas">
        <Line Stroke="LightGray" StrokeThickness="2" 
              X1="{Binding StartPoint.X}"
              Y1="{Binding StartPoint.Y}"
              X2="{Binding EndPoint.X}"
              Y2="{Binding EndPoint.Y}"
              />
    </Canvas>
</UserControl>
